{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "/@/*": ["src/*"],
      "/#/*": ["types/*"],
      "@tests": ["tests/*"]
    },
    "types": [
      "@types/jest",
      "@vue/test-utils"
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "tests/**/*.ts",
    "jest.config.ts",
    "webpack.config.ts"
, "tests/start.test.js"  ],
  "exclude": ["node_modules", "dist", "**/*.js"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es5",
      "esModuleInterop": true,
      "noEmit": false,
      "noEmitOnError": true
    }
  }
}
